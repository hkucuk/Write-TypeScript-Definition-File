{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,  
      "target": "es5",
      "experimentalDecorators": false,
      "emitDecoratorMetadata": false,
      "strict": false,
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2017", "dom"],
      "allowJs": false,
      "checkJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    
  }
  
  